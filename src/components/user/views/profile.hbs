<section>
    <div class="container">
        <div class="page-content page-container" id="page-content">
            <div class="padding">
                <div class="row container d-flex justify-content-center">
                    <div class="col-xl-12 col-md-12">
                        <div class="card user-card-full">
                            <div class="row m-l-0 m-r-0" style="height: 600px;">
                                <div class="col-sm-4 user-profile">
                                    <div class="card-block text-center text-white">
                                        <div class="m-b-25"> <img id="profile-avatar" src={{user.avatar_url}} class="img-radius" alt="User-Profile-Image"> </div>
                                        <h6 class="f-w-600" id="profile-username">{{user.username}}</h6>
                                        <!--<p style="color: yellow; font-size: 18px; position: relative; top: -15px">${{user.account_balance}}</p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>-->
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="card-block">
                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600 profile-header-section">General</h6>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600 profile-header-field">First Name</p>
                                                <div class="infomation-row">
                                                    <h6 class="text-muted f-w-400" id="firstName">{{user.firstName}}</h6>
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </div>

<!--                                             <form method="post">
                                                    <div class="container edit-form">
                                                        <input class="edit-input" type="text"; name="firstname">
                                                        <input type="submit" value="Apply" class="sub-btn">
                                                    </div>
                                                </form>-->

                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600 profile-header-field">LastName</p>
                                                <div class="infomation-row">
                                                    <h6 class="text-muted f-w-400" id="lastName">{{user.lastName}}</h6>
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600 profile-header-section">Contact</h6>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600 profile-header-field">Email</p>
                                                <div class="infomation-row">
                                                    <h6 class="text-muted f-w-400" id="email">{{user.email}}</h6>
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600 profile-header-field">Phone</p>
                                                <div class="infomation-row">
                                                    <h6 class="text-muted f-w-400" id="phone">{{user.phone}}</h6>
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600 profile-header-section">Others</h6>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600 profile-header-field">Recent</p>
                                                <h6 class="text-muted f-w-400">Sam Disuja</h6>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600 profile-header-field">Most Viewed</p>
                                                <h6 class="text-muted f-w-400">Dinoter husainm</h6>
                                            </div>
                                        </div>
                                        <ul class="social-link list-unstyled m-t-40 m-b-10">
                                            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
